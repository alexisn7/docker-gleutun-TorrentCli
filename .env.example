######################################################################
# ENVIRONMENT VARIABLES for Gluetun + Transmission Stack
#
# Copy this file to .env and fill in your values.
######################################################################

# ────────────── BASE CONFIGURATION ──────────────
TZ=Europe/Paris
PUID=1000
PGID=1000
MEDIA_DIR=./Downloads
CONFIG_PATH=./config

# ────────────── GLUETUN VPN CONFIG ──────────────
VPN_SERVICE_PROVIDER=protonvpn
VPN_TYPE=openvpn
SERVER_COUNTRIES=France,Germany,Netherlands
UPDATER_PERIOD=24h

# ────────────── OPENVPN CREDENTIALS ─────────────
OPENVPN_USER=__your_username__+pmp
OPENVPN_PASSWORD=__your_password__
OPENVPN_CIPHERS=

# ────────────── WIREGUARD CREDENTIALS ───────────
WIREGUARD_PRIVATE_KEY=

# ────────────── PORT FORWARDING ─────────────────
VPN_PORT_FORWARDING=true
PORT_FORWARD_ONLY=true

# ────────────── TRANSMISSION AUTH ──────────────
TRANSMISSION_USER=
TRANSMISSION_PASSWORD=

# ────────────── DOCKER MODS ───────────────────
DOCKER_MODS=linuxserver/mods:transmission-floodui|linuxserver/mods:transmission-env-var-settings|michaukrieg/docker-mods:transmission-gluetun-port-update
