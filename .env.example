######################################################################
# ENVIRONMENT VARIABLES for Gluetun + Transmission Stack
#
# Copy this file to .env and fill in your values.
######################################################################

# ────────────── BASE CONFIGURATION ──────────────
TZ=Europe/Paris
PUID=1000
PGID=1000
MEDIA_DIR=./MEDIA
CONFIG_PATH=./config

# ────────────── GLUETUN VPN CONFIG ──────────────
VPN_SERVICE_PROVIDER=protonvpn
VPN_TYPE=openvpn
SERVER_COUNTRIES=France,Germany,Netherlands
UPDATER_PERIOD=24h

GLUETUN_AUTH_TYPE=apikey
GLUETUN_AUTH_API_KEY=AQBMs2hvVShFgudeP7QMBg

# ────────────── OPENVPN CREDENTIALS ─────────────
OPENVPN_USER=__your_username__+pmp
OPENVPN_PASSWORD=__your_password__
OPENVPN_CIPHERS=

# ────────────── WIREGUARD CREDENTIALS ───────────
WIREGUARD_PRIVATE_KEY=

# ────────────── PORT FORWARDING ─────────────────
VPN_PORT_FORWARDING=true
PORT_FORWARD_ONLY=true

# ────────────── QBITTORRENT SETTINGS ──────────────
WEBUI_PORT=65534
QBT_USERNAME=admin
QBT_PASSWORD=


